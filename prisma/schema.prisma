generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Status {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  color     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ticket {
  id       String   @id @default(uuid())
  content  String 
  priority String 
  status   String
  userId   String?
}

model Faq {
  id       String @id @default(uuid())
  question String
  answer   String
}